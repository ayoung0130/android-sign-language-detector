<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash_fragment">


    <!-- Splash Fragment -->
    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.example.sign_language_detector.ui.splash.SplashFragment"
        android:label="SplashFragment">

        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/home_fragment"
            app:popUpTo="@id/splash_fragment"
            app:popUpToInclusive="true" />
    </fragment>


    <!-- Home Fragment -->
    <fragment
        android:id="@+id/home_fragment"
        android:name="com.example.sign_language_detector.ui.home.HomeFragment"
        android:label="HomeFragment">

        <action
            android:id="@+id/action_home_to_camera"
            app:destination="@id/camera_fragment" />
        <action
            android:id="@+id/action_home_to_questions"
            app:destination="@id/questions_fragment" />
    </fragment>


    <!-- Camera Fragment -->
    <fragment
        android:id="@+id/camera_fragment"
        android:name="com.example.sign_language_detector.ui.camera.CameraFragment"
        android:label="CameraFragment">

        <action
            android:id="@+id/action_camera_to_home"
            app:destination="@id/home_fragment" />
        <action
            android:id="@+id/action_camera_to_questions"
            app:destination="@id/questions_fragment" />
        <action
            android:id="@+id/action_camera_to_sign_language"
            app:destination="@id/sign_language_fragment" />

        <!-- Questions에서 Camera로 이동 (뒤로 가기) -->
        <action
            android:id="@+id/action_questions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true" />

        <!-- Sign Language에서 Camera로 이동 (뒤로 가기) -->
        <action
            android:id="@+id/action_sign_language_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true" />
    </fragment>


    <!-- Questions Fragment -->
    <fragment
        android:id="@+id/questions_fragment"
        android:name="com.example.sign_language_detector.ui.questions.QuestionsFragment"
        android:label="QuestionsFragment">

        <action
            android:id="@+id/action_questions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true" />
    </fragment>


    <!-- Sign Language Fragment -->
    <fragment
        android:id="@+id/sign_language_fragment"
        android:name="com.example.sign_language_detector.ui.signlanguage.SignLanguageFragment"
        android:label="SignLanguageFragment" >
        <action
            android:id="@+id/action_sign_language_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
